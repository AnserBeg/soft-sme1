# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=soft_sme_db
DB_USER=postgres
DB_PASSWORD=123

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here

# Server Configuration
PORT=5000
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=*

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# AI Configuration
GEMINI_API_KEY=your-gemini-api-key-here
AI_MAX_TOKENS=500
AI_TEMPERATURE=0.7
AI_MODEL=gemini-1.5-flash
AI_MAX_OUTPUT_TOKENS=8192
AI_ENABLE_DOCUMENTATION=true
# Optional: Remote AI service authentication
# Provide a full Bearer token or the raw token (Bearer will be added automatically)
AI_AGENT_SERVICE_TOKEN=
# Optional alternative header for remote services that expect an API key
AI_AGENT_SERVICE_API_KEY=
