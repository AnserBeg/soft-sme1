# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=soft_sme_db
DB_USER=postgres
DB_PASSWORD=123
# Optional database startup behaviour overrides
# DB_SKIP_STARTUP_CHECK=true
# DB_STARTUP_RETRY_ATTEMPTS=5
# DB_STARTUP_RETRY_DELAY_MS=5000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here

# Server Configuration
PORT=5000
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=*

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# AI Configuration
GEMINI_API_KEY=your-gemini-api-key-here
AI_MAX_TOKENS=500
AI_TEMPERATURE=0.7
AI_MODEL=gemini-1.5-flash
AI_MAX_OUTPUT_TOKENS=8192
AI_ENABLE_DOCUMENTATION=true
# Optional: Remote AI service authentication
# Provide a full Bearer token or the raw token (Bearer will be added automatically).
# Surrounding quotes pasted from dashboards will be stripped automatically.
AI_AGENT_SERVICE_TOKEN=
# Optional alternative header for remote services that expect an API key
# Quotes around the value are also trimmed automatically if present.
AI_AGENT_SERVICE_API_KEY=
# Optional override for remote AI endpoint (accepts base path or full /chat URL)
AI_AGENT_REMOTE_URL=
